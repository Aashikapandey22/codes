print("Assignment Reminder App")
print("Type 'done' when you've submitted your assignment.\n")

while True:
    # Ask if assignment is submitted
    response = input("Have you submitted your assignment? ")
    
    # Check if user has completed the task
    if response.lower() == "done":
        print("Great job!!! Assignment submitted! ğŸ‰")
        break
    else:
        # Print friendly reminders based on different responses
        if response.lower() == "no" or response.lower() == "not yet":
            print("Still waiting for you â³")
        elif response.lower() == "later" or response.lower() == "soon":
            print("Submit it already! Is high time âš ï¸")
        else:
            print("Come on, you can do it! Get that assignment in! ğŸ’ª")
