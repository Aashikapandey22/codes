# Person class with name and age, and parameterized constructor
class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age

# Student class inherits from Person, adds rollno and stream, with parameterized constructor
class Student(Person):
    def __init__(self, name, age, rollno, stream):
        super().__init__(name, age)  # Initialize Person variables
        self.rollno = rollno
        self.stream = stream

    def display(self):
        print("Name:", self.name)
        print("Age:", self.age)
        print("Roll No:", self.rollno)
        print("Stream:", self.stream)

# Create object and display details
student1 = Student("Sejal Sonavane", 18, 111, "Science")
student1.display()
